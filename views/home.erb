  <h1>CMS Application</h1>
  <ul>
    <% @files.each do |file| %>
      <li>
        <a href='/<%= file %>'><%= file %></a>
        <a href='/<%= file %>/edit'><button>Edit</button></a>
        <form class="inline" method="post" action="/<%= file %>/duplicate">
          <button type="submit">duplicate</button>
        </form>
        <form class="inline" method="post" action="/<%= file %>/delete">
          <button type="submit">delete</button>
        </form>
      </li>
      </br>
    <% end %>
  </ul>

  <h4><a href='/new'>New Document</a></h3>

  <% if session[:username] %>
    <form method="post" action="/users/signout">
      <p class="user-status">
        Signed in as <%= session[:username] %>.
        <button type="submit">Sign Out</button>
      </p>
    </form>
  <% else %>
    <p class="user-status">
      <a href="/users/signin">Sign In</a>
      <a href='/users/signup'>Sign Up</a>
    </p>
  <% end %>
